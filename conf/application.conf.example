# Service configuration

# WordReference
wordReference.key="#####"
wordReference.expiration = 1 day

# Google Translate
google.key="#######################################"
google.expiration = 1 day

# Merriam-Webster Services
merriamWebster.spanishKey="########-####-####-####-############"
merriamWebster.collegiateKey="########-####-####-####-############"
