# Service Defaults
services.expiration = 10 minutes

# Local dictionary in-memory caching time
dictionary.expiration = 10 minutes

# User defaults
user.servicelist = ["BYUDictionaries","WordReference","GoogleTranslate"]

# Database configuration
# ~~~~~ 
